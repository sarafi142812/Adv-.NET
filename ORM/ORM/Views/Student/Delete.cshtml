@model ORM.Models.Student

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Student</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>

        <dt>Date of Birth</dt>
        <dd>
        <dd>@(Model.Dob.HasValue ? Model.Dob.Value.ToString("yyyy-MM-dd") : "")</dd>
    

        <dt>Gender</dt>
        <dd>@Model.Gender</dd>

        <dt>CGPA</dt>
        <dd>@Model.Cgpa</dd>
    </dl>

    <form action="/Student/Delete" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />

        <!-- Optional Anti-Forgery Token (recommended) -->
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a href="/YourController/Index">Back to List</a>
        </div>
    </form>
</div>
